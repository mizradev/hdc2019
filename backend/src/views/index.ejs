        </div>
      </div>
    </div>
  </section>

  <script>
  // obtener platillos
  const platillos = new Vue({
    el:'#platillos',
    data:{
      platillos: []
    },
    methods:{
      obtenerPlatillos(){
        axios.get('http://localhost:3000/api/platillos/').then( res => {
          this.platillos = res.data;
          console.log(res.data);
        });
      },
      agregarPlatillo(index){
        console.log(this.platillos[index]);
      }
    },
    mounted(){
      this.obtenerPlatillos();
    }
  });
  </script>

