  <!-- platillos -->
  <main id="platillos">
        <section class="testimonials text-center bg-light">
        <div class="container">
          <h2 class="mb-5">Nuestros ultimos platillos!</h2>
          <div class="row">
            
          <div class="col-lg-4"  v-for="(item,index) of platillos">

          <div class="card shadow">
            
          <img class="card-img-top" :src="item.Imagen" alt="Card image cap">
            
            <div class="card-body">
              <h5 class="card-title"> {{ item.Nombre }} </h5>
              <h4 class="card-text"> L. {{ item.Precio }} </h4>
                <div>
                  
                    <small2 class="text-muted2">&#9733; &#9733; &#9733; &#9733; &#9734;</small2>
                </div>
                <a class="btn btn-primary" @click="agregarPlatillo(index)" >Pedir ahora</a>
              </div>
          </div>           
            
          </div>
        </div>
      </section>
  </main>



